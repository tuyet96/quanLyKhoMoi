@model QuanLyKho.Models.ViewModel.User
 @using QuanLyKho.Models.ModelDB;
@{
    ViewBag.Title = "CreateUserByAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<Table_Role> roles = ViewBag.Role;
}

<h2>CreateUserByAdmin</h2>



<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Create User</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    
         @using (Html.BeginForm("CreateUserByAdmin","Login",FormMethod.Post,htmlAttributes:new {@class="form-horizontal" }))
         { 
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">User name</label>

                    <div class="col-sm-10">
                        <input class="form-control" id="inputEmail3" placeholder="User name" type="text" name="UserName">
                        @Html.ValidationMessageFor(x=>x.UserName,"",htmlAttributes:new {@class="text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="inputPassword3" placeholder="Password" type="password" name="UserPassword">
                        @Html.ValidationMessageFor(x => x.UserPassword, "", htmlAttributes: new { @class = "text-danger" })
                      </div>
                </div>

                <div class="form-group">
                    <label for="FullName" class="col-sm-2 control-label">Full Name</label>

                    <div class="col-sm-10">
                        <input class="form-control" id="FullName" placeholder="Full Name" type="text" name="Name">
                        @Html.ValidationMessageFor(x => x.Name, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputRole" class="col-sm-2 control-label">Role</label>

                    <div class="col-sm-10">
                        @*@Html.DropDownList("Role", null, htmlAttributes: new { @class = "form-control" })*@
                        
                        <select name="Role" class="form-control">
                            @foreach (var item in roles)
                            {
                                <option value="@item.RoleId">@item.RoleName</option>
                            }
                        </select>
                      
                    </div>
                </div>

            </div>
        <!-- /.box-body -->
            <div class="box-footer">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Save</button>
            </div>
        <!-- /.box-footer -->
        }
      
   
</div>