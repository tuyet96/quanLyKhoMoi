@model List<QuanLyKho.Models.ViewModel.User>
@using QuanLyKho.Models.ModelDB
@{
    ViewBag.Title = "ListUser";
    Layout = "~/Views/Shared/_LayoutDataTable.cshtml";
    QuanLyKhoEntities db = new QuanLyKhoEntities();
}

<h2>Danh sách người dùng</h2>


     <!-- Content Header (Page header) -->

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Data Table With Full Features</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>UserName</th>
                                <th>Full Name</th>
                                <th>Role</th>
                                <th>Hoạt động</th>
                              <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Name</td>
                                    
                                        @{
                                            var name = db.Table_Role.Find(item.Role).RoleName;
                                        }
                                    <td>@name</td>
                                   @{ 
                                       string hoatDong;
                                       var hd = db.Table_User.Where(x => x.UserName == item.UserName).FirstOrDefault().UserRoles.Where(x => x.RoleId == item.Role).FirstOrDefault().IsActive;
                                       if (hd == null)
                                       {
                                           hoatDong = "Không";
                                       }

                                       else if (hd == true)
                                       {
                                           hoatDong = "Có";
                                       }

                                       else
                                       {
                                           hoatDong = "Không";
                                       }

                                   }
                                    <td>@hoatDong</td>
                                   <td>@Html.ActionLink("Chặn/Bỏ chặn","ChanUser",new {id = item.UserName,Role = item.Role })</td>
                                   
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>UserName</th>
                                <th>Full Name</th>
                                <th>Role</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<script type="text/javascript">

      $(document).ready(function () {

          $("#example1").DataTable();
                                            });


</script>