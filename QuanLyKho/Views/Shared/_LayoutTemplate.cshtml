<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- BOOTSTRAP STYLES-->
    <link href="@Url.Content("~/Content/myTemplate/")css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="@Url.Content("~/Content/myTemplate/")css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="@Url.Content("~/Content/myTemplate/")css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <script src="~/scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/jquery-ui-1.12.1.custom/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui-1.12.1.custom/jquery-ui.theme.min.css" rel="stylesheet" />
    <script src="~/Content/jquery-ui-1.12.1.custom/external/jquery/jquery.js"></script>
    <script src="~/Content/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <link href="~/Content/css/myCss.css" rel="stylesheet" />
    
</head>
<body>

    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="@Url.Content("~/Content/myTemplate/")img/logo.png" />

                    </a>

                </div>

                <span class="logout-spn">
                    <a href="@Url.Action("LogOut","Login")" style="color:#fff;">LOGOUT @User.Identity.Name</a>

                </span>
            </div>
        </div>

        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">



                    <li id="hanghoa" class="active-link">
                        <a href="#"><i class="fa fa-table "></i>Hàng hóa  <span class="badge">Included</span></a>
                    </li>

                    <li id="kho">

                        <a href="#"><i class="fa fa-desktop "></i>Kho chứa <span class="badge">Included</span></a>
                    </li>



                    <li>
                        <a href=""><i class="fa fa-edit "></i>Phiếu nhập  <span class="badge">Included</span></a>
                    </li>


                    <li>
                        <a href="#"><i class="fa fa-qrcode "></i>Phiếu xuất</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-bar-chart-o"></i>Nhà cung cấp</a>
                    </li>
                    <li id="user">
                        <div class="row">
                            <div class="col-md-2">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>                       
                            </div>
                            <div class="col-md-10">
                                @Html.Partial("_UserMenu")
                            </div>
                        </div>
                       
                       
                    </li>

                </ul>
            </div>

        </nav>

        <div id="page-wrapper">
            <div id="page-inner">
                @RenderBody()
            </div>
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>

    <div class="footer">


        <div class="row">
            <div class="col-lg-12">
                &copy;  2014 yourdomain.com | Design by: <a href="http://binarytheme.com" style="color:#fff;" target="_blank">www.binarytheme.com</a>
            </div>
        </div>
        
        
       
    </div>

  

   

    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/Content/myTemplate/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="@Url.Content("~/Content/myTemplate")/js/bootstrap.min.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="@Url.Content("~/Content/myTemplate")/js/custom.js"></script>

    

    <script>
        @*$("#user").click(function () {
            $(this).parent().children().removeClass("active-link");
            $(this).addClass("active-link");
            $("#page-inner").load("@Url.Action("Index2","Login")");

        });*@
        $("#hanghoa").click(function () {
            $(this).parent().children().removeClass("active-link");
            $(this).addClass("active-link");
            $("#page-inner").load("@Url.Action("IndexKhoHang", "HangHoa")");

        });
        $(".user a:gt(1)").click(function(){
            var tam = $(this).text();
            $(".user a").eq(0).text(tam);

            });
                
            
        
    </script>
   

    @RenderSection("script", false);
</body>
</html>
